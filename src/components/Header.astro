---
import ThemeToggle from './ThemeToggle.astro';
import { siteConfig } from '../config';
import Search from './Search.astro';

const navIcons = {  
  blog: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20"><path fill="currentColor" d="M18 3v2H2V3zm-6 4v2H2V7zm6 0v2h-4V7zM8 11v2H2v-2zm10 0v2h-8v-2zm-4 4v2H2v-2z"/></svg>`,

  tags: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path fill="currentColor" d="M15.62 21.12a3 3 0 0 1-4.24 0L3.05 13C2.45 12.45 2 11.63 2 10.75V6a3 3 0 0 1 3-3h4.75c.88 0 1.7.45 2.25 1.05l8.07 8.38a3 3 0 0 1 0 4.24zm-.71-.71l4.45-4.45c.78-.78.78-2.05 0-2.83l-8.25-8.55C10.78 4.2 10.3 4 9.75 4l-4.78-.03C3.87 3.97 3 4.9 3 6v4.75c0 .55.2 1.03.58 1.36l8.5 8.3c.78.78 2.05.78 2.83 0M6.5 5A2.5 2.5 0 0 1 9 7.5A2.5 2.5 0 0 1 6.5 10A2.5 2.5 0 0 1 4 7.5A2.5 2.5 0 0 1 6.5 5m0 1A1.5 1.5 0 0 0 5 7.5A1.5 1.5 0 0 0 6.5 9A1.5 1.5 0 0 0 8 7.5A1.5 1.5 0 0 0 6.5 6"/></svg>`,

  archive: `<svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2"
    viewBox="0 0 24 24" aria-hidden="true">
    <path stroke-linecap="round" stroke-linejoin="round"
      d="M3 4a1 1 0 011-1h16a1 1 0 011 1v3H3V4zm0 3v13a1 1
      0 001 1h16a1 1 0 001-1V7H3zm5 4h8" />
  </svg>`
};

const navItems = [
  { href: '/blog', text: 'Blog', icon: navIcons.blog },
  { href: '/tags', text: 'Tags', icon: navIcons.tags },
  { href: '/archive', text: 'Archive', icon: navIcons.archive },
];
---

<header 
  class="fixed top-0 left-1/2 transform -translate-x-1/2 w-full max-w-3xl bg-white/70 dark:bg-gray-900/70 backdrop-blur-md z-50 py-6"
>
  <nav class="flex justify-between items-center flex-wrap">
    <a href="/" class="flex items-center gap-3 text-2xl font-bold text-gray-900 dark:text-white">
      <img src="/favicon.svg" alt="Site Logo" class="w-8 h-8" />
      { siteConfig.title }
    </a>
    <div class="flex items-center gap-6">
      <ul class="flex gap-6">
        {navItems.map(({ href, text, icon }) => (
          <li>
            <a
              href={href}
              class="flex items-center gap-2 text-gray-700 dark:text-gray-100 hover:text-gray-900 dark:hover:text-white hover:font-bold"
            >
              <Fragment set:html={icon} />
              {text}
            </a>
          </li>
        ))}
      </ul>
      {siteConfig.search && <Search />}
      <ThemeToggle />
    </div>
  </nav>
</header>
