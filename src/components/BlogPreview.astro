---
import type { CollectionEntry } from 'astro:content';
import PostDate from './PostDate.astro';
import PostTags from './PostTags.astro';
import { getImage } from 'astro:assets';

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { title, description, date, tags, image } = post.data;

// 21:9 預設比例
const IMAGE_WIDTH = 800;
const IMAGE_HEIGHT = Math.round(IMAGE_WIDTH / 21 * 9);

let img: { src: string; width: number; height: number } | null = null;
let isRemote = false;

if (image) {
  isRemote = image.startsWith('http');

  if (isRemote) {
    img = {
      src: image,
      width: IMAGE_WIDTH,
      height: IMAGE_HEIGHT,
    };
  } else {
    // 本地圖片使用 import.meta.glob + getImage()
    // BlogPreview.astro
    const allImages = import.meta.glob('/src/assets/*.{jpg,jpeg,png,webp}', { eager: true, import: 'default' });
    const localSrc = allImages[`/src/assets/${image}`];

    if (localSrc) {
      try {
        img = await getImage({
          src: localSrc,
          width: IMAGE_WIDTH,
          height: IMAGE_HEIGHT,
          format: 'webp',
          fit: 'cover',
          position: 'center',
        });
      } catch (e) {
        console.warn('本地圖片優化失敗:', image, e);
      }
    } else {
      console.warn(`找不到本地圖片: ../assets/${image}`);
    }
  }
}
---
<article class="mb-12 p-6 bg-gray-50 dark:bg-gray-800/60 rounded-xl shadow-md hover:shadow-xl dark:shadow-gray-700/30 dark:hover:shadow-2xl dark:hover:shadow-primary-500/20 border border-gray-300/50 dark:border-gray-500/30 transition-all duration-200">
  {img && (
    <a href={`/blog/${post.slug}`} class="block mb-4">
      <img
        src={img.src}
        width={img.width}
        height={img.height}
        alt={title}
        decoding='async'
        loading='eager'
        class="w-full h-48 object-cover rounded-lg shadow-md hover:shadow-lg transition-shadow"
      />
    </a>
  )}
  <header>
    <h2 class="text-xl font-bold mb-2">
      <a href={`/blog/${post.slug}`} class="text-gray-900 dark:text-white hover:text-primary-600 dark:hover:text-primary-400">
        {title}
      </a>
    </h2>
    <div class="mb-4">
      <PostDate date={date} />
    </div>
  </header>
  <p class="text-gray-800 dark:text-gray-200 mb-4">{description}</p>
  {tags && <PostTags tags={tags} />}
</article>
